<?xml version="1.0" encoding="utf-8"?>
<!-- Este layout usa un LinearLayout para mostrar los datos verticalmente. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".DetalleContactoActivity">

    <!-- Título de la pantalla de datos. -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos de Contacto"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp" />

    <!-- TextView para el Nombre completo. -->
    <TextView
        android:id="@+id/nombre_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <!-- TextView para la Fecha de nacimiento. -->
    <TextView
        android:id="@+id/fecha_nacimiento_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <!-- TextView para el Teléfono. -->
    <TextView
        android:id="@+id/telefono_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <!-- TextView para el Email. -->
    <TextView
        android:id="@+id/email_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <!-- TextView para la Descripción del contacto. -->
    <TextView
        android:id="@+id/descripcion_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="24dp" />

    <!-- Botón para regresar a la actividad anterior y editar los datos -->
    <Button
        android:id="@+id/editar_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar datos" />

</LinearLayout>